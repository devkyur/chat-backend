# Local development configuration example
# Copy this file to application-local.yml and update with your values

spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/dating_app
    username: postgres
    password: postgres

  data:
    redis:
      host: localhost
      port: 6379
      password:

jwt:
  secret: your-local-secret-key-min-256-bits-change-this
  access-token-validity: 1800000  # 30 minutes
  refresh-token-validity: 1209600000  # 14 days

fcm:
  credentials:
    path: firebase-credentials.json
